<%- include ("partials/header")%>
    <div class='ui main text container segment' id='form'>
        <div class="ui huge header">
            <%= blog.title %>
        </div>
        <div class="ui top attached segment" id='top'>
            <img style="margin-bottom: 20px;" class='ui centered rounded image' src="<%=blog.image%>" alt="">
            <div style="margin-bottom: 10px;" class="content"><span><%= blog.create.toDateString() %> </span></div>
            <div class='description'>
                <p>
                    <%= blog.body %>
                </p>
            </div>
            <div>
                <a href="/blogs/<%=blog._id%>/edit" class="ui green button" id='edit'>Edit</a>

                <form id='delete' action="/blogs/<%=blog._id%>?_method=DELETE" method="POST">
                    <button class="ui red button">Delete</button>
                </form>
            </div>
        </div>
    </div>
    <%- include ("partials/footer")%>