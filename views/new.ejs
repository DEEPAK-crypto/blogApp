<%- include ("partials/header")%>
    <div class='ui main text container segment' id='form'>
        <div class="ui huge header">New blog</div>

        <form action="/blogs" class="ui form" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" id='text' name='blog[title]' placeholder='title'>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" id='text' name='blog[image]' placeholder='image'>
            </div>
            <div class="field">
                <label>Body</label>
                <textarea name="blog[body]" placeholder="body" id='text' id="" cols="30" rows="10"></textarea>
            </div>
            <input class="ui inverted secondary button " id='sub-btn' type="submit">
        </form>
    </div>
    <%- include ("partials/footer")%>