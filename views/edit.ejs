<%- include ("partials/header")%>
    <div class='ui main text container segment' id='form'>
        <div class="ui huge header">Edit
            <%= blog.title %>
        </div>

        <form action="/blogs/<%= blog._id %>?_method=PUT " class="ui form" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" id='text' name='blog[title]' value="<%= blog.title %> ">
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" id='text' name='blog[image]' value="<%= blog.image %> ">
            </div>
            <div class="field">
                <label>Body</label>
                <textarea name="blog[body]" id='text' id="" cols="30" rows="10"><%= blog.body %></textarea>
            </div>
            <input class="ui inverted secondary button " id='sub-btn' type="submit">
        </form>
    </div>
    <%- include ("partials/footer")%>